@{
    ViewData["Title"] = "Список клиентов";
}

<link rel="stylesheet" href="~/css/manager.css" asp-append-version="true" />

<section class="content-block">
    <section class="manager-orders">
        <h1>Список клиентов</h1>
        <div class="search-filter">
            <label for="client-search">Поиск по клиенту</label>
            <input type="text" id="client-search" placeholder="Введите ФИО клиента">
            <div class="but">
                <button class="btn" id="find_btn">Найти</button>
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>№</th>
                    <th>ФИО клиента</th>
                    <th>Номер телефона</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody id="clients-table-body">
                <!-- Данные из базы данных будут вставлены здесь -->
            </tbody>
        </table>
    </section>
</section>

<script src="~/js/load/loadClient.js" asp-append-version="true"></script>